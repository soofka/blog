{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDirs": ["src"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "declaration": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts*"
  ]
}
