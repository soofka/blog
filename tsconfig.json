{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    ".src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts*"
  ]
}